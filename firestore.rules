rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règles pour la collection Organisations
    match /organisations/{organisationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.nomOrganisation is string;
      allow update, delete: if request.auth != null && isAdmin(request.auth.uid, organisationId);
    }

    // Règles pour la collection Users
    match /users/{usersId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
    }

    // Règles pour la collection userOrganisationRelation
    match /userOrganisationRelation/{documentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId is string && request.resource.data.organisationId is string;
      allow update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Règles pour la collection feedbacks
    match /feedbacks/{documentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; 
      allow update, delete: if request.auth != null; 
    }
    // Règles pour la collection questions nested dans feedbacks
    match /feedbacks/{documentId}/questions/{questionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; 
      allow update, delete: if request.auth != null; 
    }
  }
}

